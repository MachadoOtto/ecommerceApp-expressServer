<div class="modal modal-signin position-static d-block bg-dark py-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Register</h1>
            </div>
            <div class="modal-body p-5 pt-0">
                <form action="/api/sessions/register" method="POST">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control rounded-3" name="email" id="inputEmail"
                            placeholder="name@example.com" required>
                        <label for="floatingInput">Email address</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control rounded-3" name="password" id="inputPassword"
                            placeholder="Password" autocomplete="off" required>
                        <label for="floatingPassword">Password</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control rounded-3" name="first_name" id="inputFName"
                            placeholder="Enter your first name" required>
                        <label for="inputFName">First name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control rounded-3" name="last_name" id="inputLName"
                            placeholder="Enter your last name" required>
                        <label for="inputLName">Last name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control rounded-3" name="age" id="inputAge"
                            placeholder="Enter your age" required>
                        <label for="inputAge">Age</label>
                    </div>
                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Sign Up</button>
                </form>
                <a href="/api/sessions/github">
                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-secondary">Sign Up with GitHub <img
                            src="/images/github-logo.png" alt="GitHub Logo" width="30" height="30"></button>
                </a>
                <small class="text-muted">Already have an account? <a href="/login">Log in instead!</a></small>
                {{#if error}}
                <div class="alert alert-danger mb-3" role="alert">
                    <h4 class="alert-heading">Error!</h4>
                    <p>An error ocurred during register! Please check the information you entered and try again.</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>