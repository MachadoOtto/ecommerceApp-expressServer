<u1>
    {{#each tickets}}
    <div class="accordion m-2" id="accordionPanelsStayOpen{{code}}">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-h{{code}}">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#panelsStayOpen-{{code}}" aria-expanded="true"
                    aria-controls="panelsStayOpen-{{code}}">
                    <strong>Code: {{code}}</strong>
                </button>
            </h2>
            <div id="panelsStayOpen-{{code}}" class="accordion-collapse collapse"
                aria-labelledby="panelsStayOpen-h{{code}}">
                <div class="accordion-body">
                    <strong>Code: <a href="/tickets/{{code}}">{{code}}</a></strong><br>
                    Date: {{purchase_datetime}}<br>
                    Amount: <code>${{amount}}</code><br>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</u1>